<table style="max-width: 500px; width: 100%; margin-bottom: 15px">
  <tbody>
    <tr>
      <td><strong>{{firstName}} {{lastName}}</strong>, your check:</td>
    </tr>
  </tbody>
</table>
<table style="max-width: 500px; width: 100%; border: 2px solid #000" cellspacing="0">
  <tbody>
    {{#each products}}
      <tr>
        <td style="padding-right: 15px">Name:</td>
        <td style="text-align: right; font-weight: bold">{{this.title}}</td>
      </tr>
      <tr>
        <td style="padding-right: 15px">Amount:</td>
        <td style="text-align: right; font-weight: bold">{{this.amount}}</td>
      </tr>
      {{#if this.bonus}}
        <tr>
          <td style="padding-right: 15px">Selected bonus:</td>
          <td style="text-align: right; font-weight: bold">{{this.bonus}}</td>
        </tr>
      {{/if}}
      <tr style="border-bottom: 1px solid #000; padding-bottom: 10px; margin-bottom: 10px">
        <td style="padding-right: 15px; border-bottom: 1px solid #000">Price:</td>
        <td style="text-align: right; border-bottom: 1px solid #000; font-weight: bold">{{this.price}}</td>
      </tr>
    {{/each}}
    <tr style="padding-top: 30px">
      <td style="padding-right: 15px; font-weight: 18px">Total price:</td>
      <td style="text-align: right; font-weight: bold; font-size: 18px">{{totalPrice}}</td>
    </tr>
  </tbody>
</table>